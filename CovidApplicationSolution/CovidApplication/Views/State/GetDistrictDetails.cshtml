@model IEnumerable<CovidApplication.Models.DistrictDetails>

@{
    ViewBag.Title = "GetDistrictDetails";
}

<h3 style="text-decoration-color : green; text-align: center">List of Districts for which details are available.</h3>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DistrictName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DistrictName)
                </td>
                <td>
                    @Html.ActionLink("Vaccination Appointment", "GetVaccinationCalenderForDistrict", "Vaccination", new { districtID = item.DistrictID }, null)
                </td>
            </tr>
        }

    </table>
